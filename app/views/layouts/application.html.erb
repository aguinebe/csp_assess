<!DOCTYPE html>
<html>
  <head>
    <title>CspAssess</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="margin:10px;">
  	<% if @username then %>
  	<p style="background-color: #8B8; font-size: 8pt; margin-left:auto; margin-right:auto;">
  		Logged in as <%= @username %> - session valid until <%= @expires_at %>
  	</p>
  	<% end %>
    <%= yield %>
  </body>
</html>
